<!DOCTYPE html>
<html>

<head>
  <title>
    <%= yield(:title) %>
  </title>
  <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div id="wrapper">

    <header>
      <%= link_to image_tag("rails.png", alt:"new" ),
    {:controller => 'pages', :action => 'home'}, 
    {:class => 'websiteLogo'} %>

        <%= link_to 'Rails', {:controller => 'pages', :action => 'home'},
    {:class => 'websiteTitle'} %>

    </header>
    <nav id="horzNav">

      <p>
        <%= link_to 'Home', {:controller => 'pages',:action => 'home'} %>
          <%= link_to 'About', {:controller => 'pages',:action => 'about'} %>
              <%= link_to 'Articles', {:controller => 'articles',:action => 'index'} %>
                <%= link_to 'Users', {:controller => 'users',:action => 'index'} %>

      </p>
    </nav>

    <main id="content">

      <%= yield %>
    </main>

  </div>


</body>

</html>